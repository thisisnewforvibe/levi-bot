<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">

    <!-- Alarm Icon -->
    <TextView
        android:id="@+id/alarm_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:text="ðŸ””"
        android:textSize="100sp" />

    <!-- Title -->
    <TextView
        android:id="@+id/alarm_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/alarm_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="ðŸ”” Eslatma"
        android:textColor="#1A1A1A"
        android:textSize="32sp"
        android:textStyle="bold" />

    <!-- Body / Task description -->
    <TextView
        android:id="@+id/alarm_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/alarm_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:gravity="center"
        android:text="Vazifa tavsifi"
        android:textColor="#6B6B6B"
        android:textSize="22sp" />

    <!-- Buttons container at bottom -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Snooze Button -->
        <Button
            android:id="@+id/btn_snooze"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:background="@drawable/button_snooze"
            android:text="â° 10 daqiqa"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textAllCaps="false" />

        <!-- Done Button -->
        <Button
            android:id="@+id/btn_done"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:background="@drawable/button_done"
            android:text="âœ“ Bajaraman"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textAllCaps="false" />

    </LinearLayout>

</RelativeLayout>
